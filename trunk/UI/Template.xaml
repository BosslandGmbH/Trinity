    <DataTemplate x:Key="SkillUsageRowTemplate">
        <Border Padding="8,8"  CornerRadius="0" Margin="0,0,4,0" SnapsToDevicePixels="True">
            <StackPanel>
                <CheckBox IsChecked="{Binding UseTime, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Never}"></CheckBox>
                <UniformGrid Columns="2" Margin="0,5,0,10">
                    <RadioButton Content="Never" IsChecked="{Binding UseTime, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Never}"  />
                    <RadioButton Content="Always" IsChecked="{Binding UseTime, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Always}"  />
                    <RadioButton Content="Anytime" IsChecked="{Binding UseTime, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Default}"  />
                    <RadioButton Content="Combat Only" IsChecked="{Binding UseTime, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=InCombat}" />
                    <RadioButton Content="Outside Combat Only" IsChecked="{Binding UseTime, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=OutOfCombat}" />
                </UniformGrid>
                <StackPanel Visibility="{Binding UseTime, Converter={StaticResource InverseEnumVisibilityConverter}, ConverterParameter=Never}">
                    <Slider Template="{DynamicResource LabelledSliderEditable}" 
                                Tag="Recast Delay"
                                ToolTip="Time between casts"
                                Interval="100" Maximum="4000" Minimum="200" 
                                SmallChange="100" LargeChange="100" 
                                TickPlacement="BottomRight" TickFrequency="100"
                                Value="{Binding RecastDelayMs}" 
                                HorizontalAlignment="Stretch" Margin="2"
                                />
                    <Slider Template="{DynamicResource LabelledSliderEditable}" 
                                Tag="Resource Limit"
                                ToolTip="Resource has to be higher than this to be cast" 
                                Interval="5" Maximum="100" Minimum="0" 
                                SmallChange="5" LargeChange="5" 
                                TickPlacement="BottomRight" TickFrequency="5"
                                Value="{Binding ResourcePct}" 
                                HorizontalAlignment="Stretch" Margin="2"
                                />
                </StackPanel>
