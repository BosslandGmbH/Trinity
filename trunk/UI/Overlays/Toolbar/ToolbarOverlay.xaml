<UserControl 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ut="clr-namespace:Trinity.UI.UIComponents"
    mc:Ignorable="d" 
    d:DesignHeight="250" d:DesignWidth="500">
    <UserControl.Resources>
        <ut:ImagePathConverter x:Key="ImagePathConverter" />
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Button Margin="0,0,5,0" Width="64" Height="64" Command="{Binding LaunchRaderWindowCommand}">
            <Image MinWidth="64" MinHeight="64" MaxWidth="128" MaxHeight="128" Source="{Binding ImagePathRadar, Converter={StaticResource ImagePathConverter}}"/>            
        </Button>
        <Button Margin="0,0,5,0" Width="64" Height="64" Command="{Binding LaunchTrinitySettingsCommand}">
            <Image Width="64" Height="64" Source="{Binding ImagePathSettings, Converter={StaticResource ImagePathConverter}}"/>
        </Button>
    </StackPanel>
</UserControl>
